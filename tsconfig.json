{
  "compilerOptions": {
    "noUnusedLocals": true,
    "module": "esnext",
    "target": "esnext",
    "jsx": "preserve",
    "removeComments": true,
    "pretty": true,
    "strict": true,
    "outDir": "./",
    "allowJs": true,
    "sourceMap": true,
    "strictNullChecks": true
  },
  "include": ["*.ts"],
  "exclude": ["node_modules", "**/node_modules/*"]
}
